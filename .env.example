# Environment Configuration
NODE_ENV=development

# Application Configuration
APP_NAME=CollabStudy
APP_VERSION=1.0.0
APP_PORT=4200

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Database Configuration (if using backend)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collabstudy_dev
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Authentication Configuration
JWT_SECRET=generate_a_secure_jwt_secret
JWT_EXPIRES_IN=24h
SESSION_SECRET=generate_a_secure_session_secret

# Third-party Services
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Email Configuration (if using email services)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_app_password

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Security
CORS_ORIGIN=http://localhost:4200
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_NOTIFICATIONS=true
ENABLE_CHAT=true
ENABLE_FILE_SHARING=true
ENABLE_VIDEO_CALLS=false